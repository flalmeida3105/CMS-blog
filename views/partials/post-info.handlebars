<div class="m-10 max-w-full border border-gray-600 ">
    <div class="max-w-full p-4 bg-gray-400 border border-gray-400 shadow-lg text-2xl flex justify-between items-center">
        <button id="update-post-btn"
            onclick="updatePost( `{{title}}`, `{{post_content}}`, '{{id}}' )">{{title}}</button>
        <p class="text-sm">
            Posted by
            {{user.username}}
            on
            {{format_date created_at}}
            -
            {{comments.length}}
            {{format_plural "comment" comments.length}}
        </p>
    </div>
    <p class="m-4">{{post_content}}</p>
</div>